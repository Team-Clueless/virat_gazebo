<?xml version="1.0" ?>
<robot name="clueless_virat">
    <static>false</static>
    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.05" ixy="0.05" ixz="0.05" iyy="0.05" iyz="0.05" izz="0.05"/>
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/bot2.dae"/>
                </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/bot2.dae"/>
                </geometry>
        </collision>
    </link>
    <!-- =====================Left Wheel======================-->
    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/tyre1.dae"/>
                </geometry>
        </visual>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.005" ixy="0.005" ixz="0.005" iyy="0.005" iyz="0.005" izz="0.005"/>
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/tyre1.dae"/>
                </geometry>
        </collision>
    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.323 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- =====================Right Wheel======================-->
    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/tyre1.dae"/>
                </geometry>
        </visual>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.05" ixy="0.05" ixz="0.05" iyy="0.05" iyz="0.05" izz="0.05"/>
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/tyre1.dae"/>
                </geometry>
        </collision>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.323 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- =====================Castor Wheel======================-->
    <link name="connect_castor_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 1.57 0"/>
                <geometry>
                    <cylinder radius="0.006" length="0.48"/>
                </geometry>
        </visual>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.05" ixy="0.05" ixz="0.05" iyy="0.05" iyz="0.05" izz="0.05"/>
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="0 1.57 0"/>
                <geometry>
                    <cylinder radius="0.006" length="0.48"/>
                </geometry>
        </collision>
    </link>

    <joint name="castor_connect_joint" type="fixed">
        <parent link="base_link"/>
        <child link="connect_castor_link"/>
        <origin xyz="0 0 0 " rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>

    <link name="castor_link">
        <visual>
            <origin xyz="0 0 0 " rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/castors1.dae" scale="1.45 1.45 1.45"/>
                </geometry>
        </visual>

        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.05" ixy="0.05" ixz="0.05" iyy="0.05" iyz="0.05" izz="0.05"/>
        </inertial>

        <collision>
            <origin xyz="0 0 0 " rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://virat_gazebo/models/virat/meshes/castors1.dae" scale="1.45 1.45 1.45"/>
                </geometry>
        </collision>
    </link>

    <joint name="castor_joint" type="fixed">
        <parent link="connect_castor_link"/>
        <child link="castor_link"/>
        <origin xyz="0.48 0 0 " rpy="0 0 0"/>
        <axis xyz="0 0 0"/>
    </joint>
    
    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <commandTopic>/cmd_vel</commandTopic>
            <odometryTopic>/odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <odometrySource>world</odometrySource>
            <publishOdomTF>true</publishOdomTF>
            <robotBaseFrame>base_link</robotBaseFrame>
            <publishWheelTF>false</publishWheelTF>
            <publishTf>true</publishTf>
            <publishWheelJointState>true</publishWheelJointState>
            <legacyMode>false</legacyMode>
            <updateRate>30</updateRate>
            <leftJoint>left_wheel_joint</leftJoint>
            <rightJoint>right_wheel_joint</rightJoint>
            <wheelSeparation>0.160</wheelSeparation>
            <wheelDiameter>0.066</wheelDiameter>
            <wheelAcceleration>1</wheelAcceleration>
            <wheelTorque>10</wheelTorque>
            <rosDebugLevel>na</rosDebugLevel>
        </plugin>
    </gazebo>

</robot>

