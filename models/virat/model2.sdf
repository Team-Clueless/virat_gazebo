<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="virat">
    <static>false</static>
    <link name="base_link">
      <inertial>
        <inertia>
          <ixx>1</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1</iyy>
          <iyz>0</iyz>
          <izz>1</izz>
        </inertia>
        <mass>10.0</mass>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://virat/meshes/bot2.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="virat_body">
        <geometry>
          <mesh>
            <uri>model://virat/meshes/bot2.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

