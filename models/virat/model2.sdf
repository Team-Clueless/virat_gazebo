    <!-- ==================== Wheels =============== -->
    <link name="left_wheel">
      <pose>0 0.34 0 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://virat/meshes/tyre1.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://virat/meshes/tyre1.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>0 -0.34 0 0 0 0</pose>
      <collision name="collision">
        <geometry>
          <mesh>
            <uri>model://virat/meshes/tyre1.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://virat/meshes/tyre1.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <!-- Joints for Wheels -->
    <joint type="revolute" name="left_wheel_hinge">
      <pose>0 -0.34 0 0 0 0</pose>
      <child>left_wheel</child>
      <parent>base_link</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint type="revolute" name="right_wheel_hinge">
      <pose>0 0.34 0 0 0 0</pose>
      <child>right_wheel</child>
      <parent>base_link</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
  </model>
</sdf>